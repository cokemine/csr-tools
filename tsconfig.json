{
  "files": ["single.ts", "index.ts"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "lib": ["esnext"]
  },
  "exclude": ["node_modules"]
}
